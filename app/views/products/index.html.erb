<h1>All Products</h1>
<%= link_to "Create new product", new_product_path %>

<div class="product">
  <% @products.reverse.each do |product| %>
    <h3><%= link_to product.name, product_path(product) %></h3>
    $ <%= product.formatted_price %><br>
    <%= link_to image_tag(product.url), product_path(product) %><br>
    <%= product.description %> <div class="break"><br><br></div>
  <% end %>
</div>
