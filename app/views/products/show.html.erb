<h1><%= @product.name %></h1>

<div class="product">
  <%= image_tag @product.url %><br>
  $ <%= @product.formatted_price %><br>
  <%= @product.description %><br>
</div>
<%= link_to "Back", products_path %><br>
<%= link_to "Edit Product", edit_product_path %><br>
<%= link_to "Delete Product", @product, method: :delete, data: {confirm: "Are you sure?"} %>

<h3>Reviews</h3>

 <p>Reviews for <%= @product.name %></p>

 <% @product.reviews.each do |review| %>
   <p>
     <%= review.comment %>
     <br>
     <% if review.user != nil %>
       <em> by <%= review.user.username %></em><br>
       Added on: <%= review.created_at %>
     <% end %>
   </p>
 <% end %>
<% if current_user %>
  <h4>New Review</h4>
    <%= form_for [@product, @review] do |f| %>
      <% if @review.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
          <ul>
            <% @review.errors.full_messages.each do |msg| %>
              <%= msg %>
            <% end %>
          </ul>
        </div>
      <% end %>
    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_field :comment %>
    </div>
    <div class="submit">
      <%= f.submit "Create Review" %>
    </div>
  <% end %>
  <% else %>
    <p>Please <%= link_to "log in", new_session_path %> to add a review.</p>
<% end %>
