<h1>Log in</h1>

<%= form_tag sessions_path do  %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= email_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="submit">
    <%= submit_tag "Log in now!!" %>
  </div>
<% end %>
